<%- include ('partials/header') %>
<main>
  <div class="login-wrapper">
    <% if (message === "USERS_INVALID_VALUE") { %>
    <p style="color: red">
      <%= 'メールアドレスとパスワードは入力されていません。'%>
    </p>
    <% } else if (message === "NOT_FOUND_USER") { %>
    <p style="color: red"><%= '入力値が正しくありません。'%></p>
    <% } else if (message) { %>
    <p style="color: red"><%= '予期せぬエラーが起きました。'%></p>
    <% }else{ %>
    <p style="color: red"><%= ''%></p>
    <% } %>
    <div class="row">
      <form class="col s12" action="/login" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <input
              id="email"
              type="email"
              class="validate"
              name="email"
              required="required"
              minlength="1"
            />
            <label for="email">Eメールアドレス</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">vpn_key</i>
            <input
              id="password"
              type="password"
              class="validate"
              name="password"
              required="required"
              minlength="8"
            />
            <label for="password">パスワード</label>
          </div>
        </div>
        <button
          class="btn waves-effect waves-light"
          type="submit"
          name="action"
        >
          ログイン
        </button>
      </form>
    </div>
    <div class="resetPassword-wrapper">
      <p>パスワードを忘れた方は<a href="/users/resetPassword">こちら</a>から</p>
      <a href="/">トップページに戻る</a>
    </div>
  </div>
</main>
<%- include ('partials/footer') %>
